<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/topHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_16sdp"
            android:background="@drawable/circle_normal"
            android:gravity="center"
            android:padding="@dimen/_7sdp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_logo" />

        <androidx.leanback.widget.HorizontalGridView
            android:id="@+id/horizontal_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/logo"
            android:layout_toRightOf="@+id/image_logo"
            app:focusOutEnd="true"
            app:focusOutFront="true"
            app:rowHeight="wrap_content" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16sdp"
                android:background="@drawable/search_layout_selector"
                android:focusable="true"
                android:padding="@dimen/_7sdp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_action_search" />

            <ImageView
                android:id="@+id/image_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16sdp"
                android:background="@drawable/search_layout_selector"
                android:focusable="true"
                android:padding="@dimen/_7sdp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_action_profile" />

        </LinearLayout>

    </RelativeLayout>

</merge>
